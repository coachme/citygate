$ ->
  role_selector =
    select_new_role: ->
      $("#role_id").on "change", (event) ->
        $.post "/home/role_change", { data: $("#role_id").val() }, (data) ->
          window.location.href = data.redirect

    init: ->
      role_selector.select_new_role()

  # When using turbolinks
  $(window).bind 'page:change', role_selector.init()
  # otherwise
  role_selector.init()
